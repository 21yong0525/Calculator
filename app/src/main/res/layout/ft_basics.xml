<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/tvValue1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:gravity="right"
            android:hint="0"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvArithmetic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvArithmetic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint=" ±"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvValue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvValue1"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/tvIsValue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="= 0"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvValue2" />

        <TextView
            android:id="@+id/tvValue2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="0"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIsValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvArithmetic" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/mainlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSquare"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:onClick="dummyclick"
            android:text="x²"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="←"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvDivision"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="÷"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/vtMultiplication"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="×"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvMinus"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="－"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="＋"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv0"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvReal"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border2"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvIs"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/custom_ripple_border"
            android:gravity="center"
            android:text="="
            android:textColor="@color/black"
            android:textSize="34sp" />

    </GridLayout>

</LinearLayout>